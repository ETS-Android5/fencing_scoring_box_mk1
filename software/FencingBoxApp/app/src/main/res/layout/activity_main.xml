<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/redCardA"
        android:layout_width="43dp"
        android:layout_height="19dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:background="#FF0000"
        app:layout_constraintEnd_toEndOf="@+id/textFencerALight"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/yellowCardA"
        app:layout_constraintTop_toBottomOf="@+id/textFencerALight" />

    <TextView
        android:id="@+id/yellowCardA"
        android:layout_width="43dp"
        android:layout_height="19dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:background="#FFFF00"
        android:foregroundTint="#FFFF00"
        app:layout_constraintBottom_toTopOf="@+id/textClock"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textFencerALight"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textScore"
        android:layout_width="280dp"
        android:layout_height="96dp"
        android:layout_marginBottom="104dp"
        android:background="#D8D8D8"
        android:textAlignment="center"
        android:textSize="64sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textClock"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textClock" />

    <TextView
        android:id="@+id/textFencerBLight"
        android:layout_width="125dp"
        android:layout_height="146dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="80dp"
        android:background="#00FF00"
        app:layout_constraintBottom_toTopOf="@+id/textClock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textFencerALight"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textFencerALight"
        android:layout_width="125dp"
        android:layout_height="146dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="80dp"
        android:background="#FF0000"
        app:layout_constraintBottom_toTopOf="@+id/textClock"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textClock"
        android:layout_width="280dp"
        android:layout_height="94dp"
        android:background="#D8D8D8"
        android:textAlignment="center"
        android:textSize="64sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.825"
        tools:ignore="MissingPrefix" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="1dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="632dp" />

    <TextView
        android:id="@+id/redCardB"
        android:layout_width="43dp"
        android:layout_height="19dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        android:background="#FF0000"
        app:layout_constraintBottom_toTopOf="@+id/textClock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFencerBLight"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/yellowCardB"
        android:layout_width="43dp"
        android:layout_height="19dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="36dp"
        android:background="#FFFF00"
        app:layout_constraintEnd_toStartOf="@+id/redCardB"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textFencerBLight"
        app:layout_constraintTop_toBottomOf="@+id/textFencerBLight" />

</androidx.constraintlayout.widget.ConstraintLayout>